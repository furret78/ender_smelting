{
	"schemaVersion": 1,
	"id": "ender_smelting",
	"version": "${version}",
	"name": "Ender Smelting",
	"description": "A mod that adds an Ender Furnace. A bit more expensive to craft, but usable anywhere and everywhere, and smelts twice as fast.",
	"authors": [
		"yuureiki",
        "Rosa (TheEnigmaScribe)"
	],
	"contact": {
		"sources": "https://github.com/furret78/ender_smelting"
	},
	"license": "GNU AGPLv3",
	"icon": "assets/ender_smelting/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"yuureiki.ender_smelting.EnderSmelting"
		],
		"client": [
			"yuureiki.ender_smelting.EnderSmeltingClient"
		],
		"fabric-datagen": [
			"yuureiki.ender_smelting.EnderSmeltingDataGenerator"
		]
	},
	"mixins": [
		"ender_smelting.mixins.json",
		{
			"config": "ender_smelting.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	},
    "custom": {
      "modmenu": {
        "links": {
          "modmenu.discord": "https://discord.gg/gxurcQ3Chn"
        },
        "update_checker": true
    }
  }
}